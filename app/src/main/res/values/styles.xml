<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultWhite</item>
        <item name="colorPrimaryDark">@color/defaultWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#D4855B</item>
        <item name="android:textColorHint">#D4855B</item>
        <item name="colorControlNormal">#D4855B</item>
        <item name="colorControlActivated">#D4855B</item>
        <item name="colorControlHighlight">#D4855B</item>
        <item name="colorAccent">#D4855B</item>
        <item name="boxStrokeWidth">4dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/trueRed</item>
        <item name="colorControlNormal">@color/darkGrey</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkOrange</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>